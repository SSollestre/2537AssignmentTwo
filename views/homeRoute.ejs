<%- include('partials/meta.ejs')%>

    <body>
        <!-- Header -->
        <%- include('partials/header.ejs')%>

            <!-- Content Authorized-->
            <% if (primaryUser===undefined) { %>
                <div class="px-4 py-5 my-5 text-center">

                    <h1 class="display-6 fw-bold mb-5">Assignment Two</h1>

                    <div class="row">
                        <div class="col d-flex justify-content-center mx-auto">
                            <a class="btn btn-outline-dark me-2" href="/login">Login</a>
                            <a class="btn btn-outline-warning" href="/signup">Sign Up</a>
                        </div>
                    </div>

                </div>

                <!-- Content Unauthorized -->
                <% } else {%>
                    <div class="container-fluid text-center mt-3">
                        <h3> Hello, <%= primaryUser.name %>!</h3>
                        <div class="d-flex justify-content-center">

                            <a class="btn btn-outline-dark me-1" href="/members">Profile</a>
                            <% if (primaryUser.role==="Admin" ) { %>
                                <a class="btn btn-outline-dark me-1" href="/admin">Admin</a>
                                <% } %>
                        </div>

                    </div>
                    <% } %>

                        <!-- Footer -->
                        <%- include('partials/footer') %>

                            <!-- Bootstrap Scripts -->
                            <script
                                src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
                                integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
                                crossorigin="anonymous"></script>
    </body>

    </html>