<%- include('partials/meta.ejs')%>

    <body>
        <!-- Header -->
        <%- include('partials/header.ejs')%>

            <!-- Content -->
            <div class="container-fluid text-center mt-3">
                <h3 class="fw-bold"> Hello,
                    <%= primaryUser.role %>
                        <%= primaryUser.name %>
                </h3>

                <% users.forEach( (user)=> { %>
                    <div class="col d-flex justify-content-center align-items-center mx-auto flex-column flex-md-row">

                        <span class="me-2 mb-1">
                            <%= user.name %> (<%= user.role %>)
                        </span>

                        <form class="me-2 mb-1" action="./promote/<%= user.name %>" method="post">
                            <input class="btn btn-outline-success rounded-pill" type="submit"
                                value="Promote to Admin" />
                        </form>

                        <form action="./demote/<%= user.name %>" method="post">
                            <input class="btn btn-outline-danger rounded-pill" type="submit" value="Demote to User" />
                        </form>

                    </div>
            </div>
            <% }) %>
                </div>

                <!-- Footer -->
                <%- include('partials/footer') %>

                    <!-- Bootstrap Scripts -->
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
                        crossorigin="anonymous"></script>
    </body>

    </html>